<script type="text/javascript">
    function vote() {
        var selected = $("input:radio[name='optionsRadios']:checked").val();
        if (selected !== undefined) {
            bbt.write({ channel: 'ElectionApp', resource: 'President' }, parseInt(selected));
        }
    }
</script>

